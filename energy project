<!-- JS Section -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
/* Energy Saving Calculator */
function calc() {
  let daily = document.getElementById("energy").value;
  if (daily === "" || daily <= 0) {
    document.getElementById("result").innerText = "Please enter a valid number!";
    return;
  }
  let yearly = daily * 365;
  document.getElementById("result").innerText =
    "You can save about " + yearly + " kWh of electricity per year!";
}

/* Carbon Footprint Calculator */
function calcCarbon() {
  let daily = document.getElementById("carbonInput").value;
  if (daily === "" || daily <= 0) {
    document.getElementById("carbonResult").innerText = "Please enter a valid number!";
    return;
  }
  let yearly = daily * 365;
  let co2 = yearly * 0.4; // Assume 1 kWh ‚âà 0.4 kg CO2
  let trees = co2 / 20;   // Assume 1 tree absorbs 20kg CO2 per year
  document.getElementById("carbonResult").innerText =
    "Annual CO‚ÇÇ emissions: " + co2.toFixed(1) + " kg üåç\n" +
    "Equivalent to planting about " + trees.toFixed(1) + " trees üå≥";
}

/* Energy Comparison */
function compareEnergy() {
  let type = document.getElementById("energyType").value;
  let result = "";
  if (type === "solar") {
    result = "Solar: Clean energy, moderate output, decreasing cost, almost zero CO‚ÇÇ.";
  } else if (type === "wind") {
    result = "Wind: Clean energy, good in windy regions, low cost, very low CO‚ÇÇ.";
  } else {
    result = "Coal: Traditional source, high output but very polluting, ~1kg CO‚ÇÇ per kWh.";
  }
  document.getElementById("compareResult").innerText = result;
}

/* Progress Bar */
function updateProgress() {
  let val = document.getElementById("progressInput").value;
  if (val === "" || val <= 0) {
    document.getElementById("progressText").innerText = "Please enter a valid number!";
    return;
  }
  let percent = Math.min((val / 1000) * 100, 100); // Assume target = 1000 kWh
  document.getElementById("progressBar").value = percent;
  document.getElementById("progressText").innerText = "Current Progress: " + percent.toFixed(1) + "%";
}

/* Eco Goal Tracker */
let goalCount = 0;
function addGoal() {
  goalCount++;
  document.getElementById("goalResult").innerText =
    "You have marked " + goalCount + " days üå±";
}

/* Quiz */
function checkAnswer() {
  let ans = document.getElementById("quiz").value;
  if (ans >= 55 && ans <= 65) {
    document.getElementById("quizResult").innerText = "‚úÖ Correct! It‚Äôs about 60%.";
  } else {
    document.getElementById("quizResult").innerText = "‚ùå Try again!";
  }
}

/* Dark Mode */
function toggleDarkMode() {
  document.body.classList.toggle("dark-mode");
}

/* Chart.js */
const ctx = document.getElementById('energyChart');
new Chart(ctx, {
  type: 'pie',
  data: {
    labels: ['Hydro', 'Wind', 'Solar', 'Nuclear'],
    datasets: [{
      data: [60, 20, 10, 10],
      backgroundColor: ['#42a5f5','#66bb6a','#ffca28','#ab47bc']
    }]
  }
});
</script>

